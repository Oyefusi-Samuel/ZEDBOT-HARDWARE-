<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial.xacro"/>

    <material name="orange">
        <color rgba="1 0.55 0 1"/>
    </material>

    <xacro:macro name="gz_material_orange">
        <material>
          <ambient>1.0 0.5 0.0 1.0</ambient>
          <diffuse>1.0 0.5 0.0 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
    </xacro:macro>

    <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
    </material>

    <xacro:macro name="gz_material_black">
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
    </xacro:macro>

    <material name="silver">
        <color rgba="0.6 0.6 0.6 1"/>
    </material>

    <xacro:macro name="gz_material_silver">
        <material>
          <ambient>0.6 0.6 0.6 1.0</ambient>
          <diffuse>0.6 0.6 0.6 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
    </xacro:macro>

    <material name="grey">
        <color rgba="0.25 0.25 0.25 1"/>
    </material>

    <xacro:macro name="gz_material_grey">
        <material>
          <ambient>0.25 0.25 0.25 1.0</ambient>
          <diffuse>0.25 0.25 0.25 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
    </xacro:macro>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <xacro:macro name="gz_material_blue">
        <material>
          <ambient>0.0 0.0 1.0 1.0</ambient>
          <diffuse>0.0 0.0 1.0 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
    </xacro:macro>


    <material name="red">
        <color rgba="1 0.1 0.1 1"/>
    </material>

    <xacro:macro name="gz_material_red">
        <material>
          <ambient>1.0 0.0 0.0 1.0</ambient>
          <diffuse>1.0 0.0 0.0 1.0</diffuse>
          <specular>0.1 0.1 0.1 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
    </xacro:macro>



    <!-- BASE LINK -->
    <link name="base_link">
    </link>




    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0.05"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <cylinder radius="0.3" length="0.1"/> <!-- Circular chassis -->
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <cylinder radius="0.3" length="0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" radius="0.3" length="0.15">
            <origin xyz="0.3 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <xacro:if value="$(arg run_gz_sim)">
        <gazebo reference="chassis">
            <visual>
              <xacro:gz_material_blue/>
            </visual>
        </gazebo>
    </xacro:if>




    <!-- LEFT WHEEL OF ROBOT -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.175 0.05" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <xacro:if value="$(arg run_gz_sim)">
        <gazebo reference="left_wheel">
            <visual>
              <xacro:gz_material_black/>
            </visual>
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>
    </xacro:if>



    <!-- RIGHT WHEEL OF ROBOT -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.175 0.05" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <xacro:if value="$(arg run_gz_sim)">
        <gazebo reference="right_wheel">
            <visual>
              <xacro:gz_material_black/>
            </visual>
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
        </gazebo>
    </xacro:if>





    <!-- DOLLY WHEEL JOINT -->
    <joint name="dolly_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="dolly_wheel"/>
        <origin xyz="0.34 0 0"/>
    </joint>

    <link name="dolly_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <xacro:if value="$(arg run_gz_sim)">
        <gazebo reference="dolly_wheel">
            <visual>
              <xacro:gz_material_silver/>
            </visual>
            <mu1>0.001</mu1>
            <mu2>0.001</mu2>
        </gazebo>
    </xacro:if>

</robot>
